#!/usr/bin/env magix
#!magix bash
#!packages mermaid-cli

graphs=(
  include-graph-all.mmd
  include-graph-backend.mmd
  include-graph-no-stdlibs.mmd
)

for graph in "${graphs[@]}"; do
    mmdc -i "${graph}" -o "${graph%mmd}svg"
done

mmdc -i include-graph-reduced-edited.mmd -o include-graph-reduced-edited.png
mmdc -i include-graph-example.mmd -o include-graph-example.png
